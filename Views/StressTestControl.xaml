<UserControl
    x:Class="StressTest.Views.StressTestControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StressTest.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:StressTest.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:StressTestViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox
            Grid.Row="0"
            IsReadOnly="False"
            Text="{Binding Query, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Grid Grid.Row="1">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Width="80"
                    Height="20"
                    Margin="8"
                    Command="{Binding QueryCommand}">
                    Execute
                </Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <TextBox
                    Name="MemoryInMB"
                    Width="200"
                    Height="20"
                    IsReadOnly="False"
                    PreviewTextInput="NumberValidationTextBox"
                    Text="{Binding MemoryInMB, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    Width="80"
                    Height="20"
                    Margin="8"
                    Command="{Binding AllocateCommand}">
                    Allocate
                </Button>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
