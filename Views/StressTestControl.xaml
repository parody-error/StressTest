<UserControl
    x:Class="StressTest.Views.StressTestControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StressTest.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:StressTest.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:StressTestViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox
            Grid.Row="0"
            IsReadOnly="False"
            Text="{Binding Query, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Grid Grid.Row="1">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Width="80"
                    Height="20"
                    Margin="8,4,4,4"
                    Command="{Binding QueryCommand}">
                    Execute
                </Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Name="StatusMessage"
                Grid.Column="0"
                Height="20"
                Margin="4"
                Text="{Binding StatusMessage, Mode=OneWay}"
                TextAlignment="Left" />
            <TextBox
                Name="MemoryInMB"
                Grid.Column="1"
                Width="75"
                Height="20"
                IsReadOnly="False"
                PreviewTextInput="NumberValidationTextBox"
                Text="{Binding MemoryInMB, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox
                Name="Unit"
                Grid.Column="2"
                Width="40"
                Height="20"
                IsReadOnly="True"
                Text="(MB)" />
            <Button
                Grid.Column="3"
                Width="80"
                Height="20"
                Margin="8,4,4,4"
                Command="{Binding AllocateCommand}">
                Allocate
            </Button>
        </Grid>

    </Grid>
</UserControl>
